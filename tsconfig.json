{
  "compilerOptions": {
    "target": "es6",
    "outDir": "build/main",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "pretty": true,
    "lib": ["es2017"]
  }
}
